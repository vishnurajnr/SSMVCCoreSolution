@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - SS</title>
  <environment names="Development,Production">
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
  </environment>
  @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
  <partial name="_NavbarLayout" />
  <div class="container-fluid dataPlacement">
    <div class="row">
      <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
        @await Component.InvokeAsync("Categories")
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10" style="border-left: 1px dotted gray;">
        @RenderBody()
      </div>
    </div>
  </div>
  <partial name="_FooterLayout" />
  <environment names="Development,Production">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </environment>
  @RenderSection("scripts", false)
</body>
</html>