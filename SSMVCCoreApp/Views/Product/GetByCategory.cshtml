@model IEnumerable<Product>
@{
  ViewData["Title"] = "GetByCategory";
}
@if (Model.Count() == 0)
{
  <h4>No Products for this Category yet</h4>
}
else
{
  <h4>Products By Category</h4>
  <div class="row container-fluid">
    <table class="table table-striped table-bordered table-sm col-sm-8 col-md-8 col-lg-8 col-xl-8">
      <thead>
        <tr>
          <th>ProductID</th>
          <th>Product Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Photo</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.Description</td>
            <td class="text-right">@item.Price.ToString("c")</td>
            <td>
              <img src="@item.PhotoUrl" height="120" width="120" />
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
}
<div>
  <a asp-controller="Product" asp-action="List" class="btn btn-outline-info">All Products</a>
</div>